{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "noEmit": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "types": ["node"],

    /* modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    ".",
    "../module-ctrl/pathUtil.test.ts",
    "../module-ctrl/pathUtil.ts"
  ]
}
